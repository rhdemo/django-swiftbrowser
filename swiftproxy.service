[Unit]
Description=Systemd script for the Swift Proxy service that allows for object storage on gluster
After=network.target

[Service]
ExecStart=/bin/swift-init main start --pidfile /var/run/swiftproxy.pid
ExecStop=/bin/swift-init main stop --pidfile /var/run/swiftproxy.pid
ExecReload=/bin/swift-init main reload --pidfile /var/run/swiftproxy.pid
Type=forking
Restart=always
PIDFile=/var/run/swiftproxy.pid

[Install]
WantedBy=default.target

